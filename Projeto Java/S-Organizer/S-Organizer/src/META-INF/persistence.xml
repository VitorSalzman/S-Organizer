    <class>modelo.Cliente</class>
    <class>modelo.Empresa</class>
    <class>modelo.Endereco</class>
    <class>modelo.Estado</class>
    <class>modelo.Logradouro</class>
    <class>modelo.Prestador</class>
    <class>modelo.Servico</class>
    <class>modelo.Solicitacao</class>
    <class>modelo.Usuario</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/sorganizer"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="kitsune"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
